{
    "name": "mlbrgn/laravel-medialibrary-extensions",
    "description": "Extensions designed for use with the Media Library package by Spatie. Adds a single image uploader, multiple image uploader and a modal with carousel",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel-medialibrary",
        "laravel-medialibrary-extensions",
        "media",
        "views",
        "blade",
        "laravel",
        "mlbrgn"
    ],
    "authors": [
        {
            "name": "Evertjan Garretsen",
            "email": "evertjan.garretsen@mlbrgn.nl",
            "homepage": "https://mlbrgn.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3",
        "ext-fileinfo": "*",
        "blade-ui-kit/blade-icons": "^1.8",
        "davidhsianturi/blade-bootstrap-icons": "^2.1",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0",
        "spatie/laravel-medialibrary": "^11.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.0.0",
        "larastan/larastan": "^3.8.0",
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^10.0.0",
        "orchestra/testbench-browser-kit": "^10.0.0",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin-drift": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "spatie/laravel-translatable": "^6.0.0",
        "symfony/dom-crawler": "^7.0.0",
        "ext-gd": "*"
    },
    "suggest": {
        "blade-ui-kit/blade-heroicons": "Optional: SVG icons from Heroicons",
        "mlbrgn/imageeditor": "Required for the image editor UI (install via npm or yarn).",
        "ext-pdo_sqlite": "Required for the Media Library Extensions demo database."
    },
    "autoload": {
        "psr-4": {
            "Mlbrgn\\MediaLibraryExtensions\\": "src/"
        },
        "files": [
            "Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mlbrgn\\MediaLibraryExtensions\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Mlbrgn\\MediaLibraryExtensions\\Providers\\MediaLibraryExtensionsServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage"
    }
}
